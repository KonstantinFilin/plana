{% set elErrorName = elName | replace({ '[': '.', ']': ''}) %}
{% set hasErrors = errors.all() | length > 0 %}

<div class="row mb-3">
    <label for="{{ elName }}" class="col-sm-2 col-form-label">{{ elLabel }}</label>
    <div class="col-sm-10">
        <textarea name="{{ elName }}" 
               id="{{ elName }}" 
               {% if rows %} rows="{{ rows }}"{% endif %}
               class="form-control{{ elClass ? ' ' ~ elClass : '' }}{{ errors.has(elErrorName) ? ' is-invalid' : '' }}" 
               >{{ hasErrors ? old(elErrorName) : elValue }}</textarea>
        {% if errors.has(elErrorName) %}
        <div class="text-danger">
            {{ errors.first(elErrorName) }}
        </div>
        {% endif %}
    </div>
</div>
